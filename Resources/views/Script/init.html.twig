<script type="text/javascript" src="{{ asset(base_url~'bundles/stfalcontinymce/vendor/tinymce/tinymce.min.js', asset_package_name) }}"></script>
<script type="text/javascript" src="{{ asset(base_url~'bundles/stfalcontinymce/js/ready.min.js', asset_package_name) }}"></script>
{% for browser in file_browsers %}
    <script type="text/javascript" src="{{ asset(base_url~'bundles/stfalcontinymce/js/'~browser.type~'.js', asset_package_name) }}"></script>
{% endfor %}
<script type="text/javascript" src="{{ asset(base_url~'bundles/stfalcontinymce/js/init.standard.js', asset_package_name) }}"></script>

{% block tinymce_widget_initializer %}
    <script type="text/javascript">
        {% if not initializeFunction %}
            initTinyMCE({{ tinymce_config|raw }});
        {% else %}
            async function {{ initializeFunction }}(options) {
                return await initTinyMCE({...{{ tinymce_config|raw }}, ...options});
            }
        {% endif %}
    </script>

{% endblock %}

{% block tinymce_widget_extra %}
{% endblock %}
